{
  "manifest_version": 2,

  "name": "Niconico douga comment opacity plugin",
  "description": "Opacify niconico douga's video comment / ニコニコ動画のコメントを透明にします",
  "version": "1.1.1",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://www.nicovideo.jp/watch/*"],
      "js": ["./js/content.js"]
    }
  ],
  "options_page": "options.html",
  "permissions": [
   "activeTab",
   "storage"
   ]
}